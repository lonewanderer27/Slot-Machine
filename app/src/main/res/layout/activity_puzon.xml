<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PuzonActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textAlignment="center"
        android:text="Puzon, Adriane James J."
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:text="SLOT MACHINE"
        android:textSize="40sp"
        android:padding="10dp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <GridLayout
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/result1"
            android:layout_columnWeight="1"
            android:textSize="100sp"
            android:textAlignment="center"
            android:text="-"/>
        <TextView
            android:id="@+id/result2"
            android:layout_columnWeight="1"
            android:textSize="100sp"
            android:textAlignment="center"
            android:text="-"/>
        <TextView
            android:id="@+id/result3"
            android:layout_columnWeight="1"
            android:textSize="100sp"
            android:textAlignment="center"
            android:text="-"/>
    </GridLayout>

    <GridLayout
        android:paddingHorizontal="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <GridLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">
            <EditText
                android:inputType="number"
                android:id="@+id/userBet1"
                android:layout_columnWeight="1"
                android:textSize="40sp"
                android:paddingHorizontal="10dp"
                android:textAlignment="center"
                android:text="-"/>

            <EditText
                android:id="@+id/userBet2"
                android:layout_width="wrap_content"
                android:layout_columnWeight="1"
                android:inputType="number"
                android:paddingHorizontal="10dp"
                android:text="-"
                android:textAlignment="center"
                android:textSize="40sp" />
            <EditText
                android:id="@+id/userBet3"
                android:inputType="number"
                android:layout_columnWeight="1"
                android:textSize="40sp"
                android:paddingHorizontal="10dp"
                android:textAlignment="center"
                android:text="-"/>
        </GridLayout>
        <EditText
            android:id="@+id/userBetAmt"
            android:inputType="number"
            android:layout_marginLeft="10dp"
            android:layout_columnWeight="1"
            android:textSize="40sp"
            android:text="-"
            />
    </GridLayout>
    <GridLayout
        android:paddingHorizontal="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/multiplier"
            android:layout_columnWeight="1"
            android:textSize="50sp"
            android:paddingHorizontal="10dp"
            android:textAlignment="center"
            android:text="2"/>
        <TextView
            android:id="@+id/remainingMoney"
            android:layout_marginLeft="60dp"
            android:textAlignment="center"
            android:textSize="50sp"
            android:text="1000.00"
            android:layout_columnWeight="4">

        </TextView>
    </GridLayout>
    <TextView
        android:id="@+id/win_or_lose"
        android:textSize="50sp"
        android:textAlignment="center"
        android:text="-"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </TextView>
    <LinearLayout
        android:padding="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/bet"
            android:textSize="30sp"
            android:text="SET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></Button>
        <Button
            android:id="@+id/reset"
            android:text="RESET"
            android:textSize="30sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></Button>
    </LinearLayout>
</LinearLayout>